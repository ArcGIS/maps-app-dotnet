<Window x:Class="MapsApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esriUI="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <esriUI:MapView x:Name="MapView" Map="{Binding Path=Map}"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!-- Compass Button -->
            <Image x:Name="CompassImage" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,20,0" 
                   Source="pack://application:,,,/MapsApp.WPF;component/Images/Compass72.png" 
                   Height="60" Width="60" RenderTransformOrigin=".5,.5" MouseDown="ResetMapRotation"/>

            <!-- Current Location Button -->
            <Image Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,20,0" 
                   Source="pack://application:,,,/MapsApp.WPF;component/Images/GPS60.png" 
                   MouseDown="MoveToCurrentLocation" Height="60" Width="60"/>
        </Grid>

    </Grid>
</Window>
