<Window x:Class="MapsApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:viewModels="clr-namespace:MapsApp.Shared.ViewModels"
        xmlns:converters="clr-namespace:MapsApp.Shared.Converters"
        xmlns:utils="clr-namespace:MapsApp.Utils"
        mc:Ignorable="d"
        Title="Maps App" >
    <Window.Resources>
        <ResourceDictionary>
            <viewModels:MapViewModel x:Key="MapViewModel" />
            <viewModels:GeocodeViewModel x:Key="GeocodeViewModel" />
            <viewModels:BasemapsViewModel x:Key="BasemapsViewModel" />
            <converters:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- MapView Control -->
        <esri:MapView x:Name="MapView" Map="{Binding Map, Source={StaticResource MapViewModel}}"
                          Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="4">
            <esri:MapView.GraphicsOverlays>
                <esri:GraphicsOverlay Id="PlacesOverlay"/>
            </esri:MapView.GraphicsOverlays>
            <utils:GeoViewExtensions.ViewpointController>
                <!--Viewpoint controller for synchronizing MapView's viewpoint with the view-model's AOI-->
                <utils:ViewpointController 
                    Viewpoint="{Binding Path = AreaOfInterest, Mode=TwoWay, Source={StaticResource GeocodeViewModel}}" >
                </utils:ViewpointController>
            </utils:GeoViewExtensions.ViewpointController>
        </esri:MapView>

        <!-- Basemaps Button -->
        <TextBlock Grid.Row="1" Grid.Column="0">
            <Hyperlink Click="OpenBasemapSwitcher"  TextDecorations="{x:Null}">
                <Image Source="pack://application:,,,/MapsApp.WPF;component/Images/Basemap60.png" Height="60" Width="60"/>
            </Hyperlink>
        </TextBlock>
        
        <!-- Basemaps Picker -->
        <StackPanel Background="White" Orientation="Vertical" x:Name="BasemapSwitcher" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Visibility="Collapsed">
            <TextBlock HorizontalAlignment="Right">
                    <Hyperlink Click="HideBasemapSwitcher" TextDecorations="{x:Null}">
                        <Image Source="pack://application:,,,/MapsApp.WPF;component/Images/cancel2.png" Height="40" Width="40"/>
                    </Hyperlink>
            </TextBlock>
            <ListView  DataContext="{StaticResource BasemapsViewModel}"  ItemsSource="{Binding Basemaps}" SelectedItem="{Binding SelectedBasemap}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Width="200" VerticalAlignment="Top">
                        <Image Stretch="UniformToFill"  Source="{Binding ThumbnailUri}" />
                        <TextBlock Margin="5,10,5,0" VerticalAlignment="Center" Text="{Binding Title}"  FontSize="15" LineHeight="26"
                                              FontWeight="DemiBold"/>
                        <!--<TextBlock Margin="5,10,5,10" Text="{Binding Snippet}" FontSize="12" LineHeight="20" TextWrapping="Wrap" />-->
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ListView>
        </StackPanel>

        <!-- List of suggestions from geocoder -->
        <ListView DataContext="{StaticResource GeocodeViewModel}" ItemsSource="{Binding SuggestionsList}" SelectedItem="{Binding SelectedSearchItem}" 
                  Grid.Column="1" Grid.Row="0" Margin="0,36,0,0" FontSize="15"
                      Width="500" HorizontalAlignment="Left" Visibility="{Binding SuggestionsList.Count, Converter={StaticResource NumberToVisibilityConverter}}"/>

        <!-- Search Panel -->
        <StackPanel x:Name="SearchPanel" Orientation="Vertical" DataContext="{StaticResource GeocodeViewModel}" Grid.Column="1" Grid.Row="0">
            <!-- Search Box and Button-->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchTextBox" Width="500" Height="40"
                                 BorderThickness="1" FontSize="20" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Width="40" Height="40" Command="{Binding SearchCommand}" CommandParameter="{Binding SearchText}">
                    <Image  Source="pack://application:,,,/MapsApp.WPF;component/Images/search_32.png" />
                </Button>
            </StackPanel>
        </StackPanel>
       
        <!--Compass Button-->
        <TextBlock Grid.Row="1" Grid.Column="2" Margin="0,100,20,0" DataContext="{Binding ElementName=MapView}" Visibility="{Binding Path=MapRotation, Converter={StaticResource NumberToVisibilityConverter}}">
            <Hyperlink Click="ResetMapRotation"  TextDecorations="{x:Null}">
                <Image x:Name="CompassImage" Source="pack://application:,,,/MapsApp.WPF;component/Images/Compass72.png" Height="60" Width="60"/>
            </Hyperlink>
        </TextBlock>

        <!--Current Location Button-->
        <TextBlock Grid.Row="2" Grid.Column="2" Margin="0,0,20,100" VerticalAlignment="Bottom">
            <Hyperlink Command="{Binding MoveToCurrentLocationCommand, Source={StaticResource MapViewModel}}" TextDecorations="{x:Null}">
                <Image Source="pack://application:,,,/MapsApp.WPF;component/Images/GPSon66.png" Height="60" Width="60"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
