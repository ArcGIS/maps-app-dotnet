<Window x:Class="Esri.ArcGISRuntime.ExampleApps.MapsApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:viewModels="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.ViewModels"
        xmlns:converters="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Converters"
        xmlns:utils="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Utils"
        mc:Ignorable="d"
        Title="Maps App">
    <Window.Resources>
        <ResourceDictionary>
            <viewModels:MapViewModel x:Key="MapViewModel"/>
            <viewModels:GeocodeViewModel x:Key="GeocodeViewModel"/>
            <converters:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter"/>
            <converters:SubtractFromConverter x:Key="SubtractFromConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

         <!--MapView Control--> 
        <esri:MapView x:Name="MapView" Map="{Binding Map, Source={StaticResource MapViewModel}}"
                          Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4">
            <esri:MapView.GraphicsOverlays>
                <esri:GraphicsOverlay Id="PlacesOverlay"/>
            </esri:MapView.GraphicsOverlays>
            <utils:GeoViewExtensions.ViewpointControllerCollection>
                <!--Viewpoint controllers for synchronizing MapView's viewpoint with the view-model's AOI-->
                <utils:ViewpointController 
                    Viewpoint="{Binding AreaOfInterest, Mode=TwoWay, Source={StaticResource GeocodeViewModel}}"/>
                <utils:ViewpointController 
                    Viewpoint="{Binding AreaOfInterest, Mode=TwoWay, Source={StaticResource MapViewModel}}"/>
            </utils:GeoViewExtensions.ViewpointControllerCollection>
        </esri:MapView>
        
         <!--List of suggestions from geocoder--> 
        <ListView DataContext="{StaticResource GeocodeViewModel}" ItemsSource="{Binding SuggestionsList}" SelectedItem="{Binding SelectedSearchItem}" 
                  Grid.Column="0" Grid.Row="0" Margin="0,36,0,0" FontSize="15"
                      Width="500" HorizontalAlignment="Left" Visibility="{Binding SuggestionsList.Count, Converter={StaticResource NumberToVisibilityConverter}}"/>

         <!--Search Panel--> 
        <StackPanel x:Name="SearchPanel" Orientation="Vertical" DataContext="{StaticResource GeocodeViewModel}" Grid.Column="0" Grid.Row="0">
             <!--Search Box and Button-->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchTextBox" Width="500" Height="40"
                                 BorderThickness="1" FontSize="20" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Width="40" Height="40" Command="{Binding SearchCommand}" CommandParameter="{Binding SearchText}">
                    <Image  Source="pack://application:,,,/MapsApp;component/Images/search_32.png" />
                </Button>
            </StackPanel>
        </StackPanel>
       
        <!--Compass Button-->
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,100,20,0" DataContext="{Binding ElementName=MapView}" Visibility="{Binding MapRotation, Converter={StaticResource NumberToVisibilityConverter}}">
            <Hyperlink Click="ResetMapRotation"  TextDecorations="{x:Null}">
                <Image x:Name="CompassImage" Source="pack://application:,,,/MapsApp;component/Images/Compass72.png" Height="60" Width="60">
                    <Image.RenderTransform>
                        <RotateTransform  Angle="{Binding MapRotation,
                                 ElementName=MapView,
                                 Converter={StaticResource SubtractFromConverter},
                                 ConverterParameter=360}" CenterX="30" CenterY="30" />
                    </Image.RenderTransform>
                </Image>
            </Hyperlink>
        </TextBlock>

        <!--Current Location Button-->
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,0,20,100">
            <Hyperlink Command="{Binding MoveToCurrentLocationCommand, Source={StaticResource MapViewModel}}" TextDecorations="{x:Null}">
                <Image Source="pack://application:,,,/MapsApp;component/Images/GPSon66.png" Height="60" Width="60"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
