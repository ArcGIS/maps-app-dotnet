<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Esri.ArcGISRuntime.ExampleApps.MapsApp.Xamarin.StartPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Xamarin"
             xmlns:utils="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Utils"
             xmlns:esri="clr-namespace:Esri.ArcGISRuntime.Xamarin.Forms;assembly=Esri.ArcGISRuntime.Xamarin.Forms"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.UI;assembly=Esri.ArcGISRuntime"
             xmlns:esriSymbols="clr-namespace:Esri.ArcGISRuntime.Symbology;assembly=Esri.ArcGISRuntime"
             xmlns:converters="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Converters"
             xmlns:controls="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Xamarin.Controls"
             xmlns:ext="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Xamarin.Extensions"
             xmlns:viewModels="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.ViewModels"
             xmlns:behaviors="clr-namespace:Esri.ArcGISRuntime.ExampleApps.MapsApp.Xamarin.Behaviors"
             NavigationPage.HasNavigationBar="false">

    <ContentPage.Resources>
        <ResourceDictionary>
            <viewModels:MapViewModel x:Key="MapViewModel" />
            <viewModels:GeocodeViewModel x:Key="GeocodeViewModel" />
            <viewModels:RoutingViewModel x:Key="RoutingViewModel"/>
            <converters:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter"/>
            <converters:SubtractFromConverter x:Key="SubtractFromConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NullToTextConverter x:Key="NullToTextConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0"/>
    </ContentPage.Padding>

    <Grid ColumnSpacing="0" RowSpacing="0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- MapView Control -->
        <esri:MapView x:Name="MapView" Map="{Binding Map, Source={StaticResource MapViewModel}}"
                         Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" >
            <esri:MapView.GraphicsOverlays>
                <esriUI:GraphicsOverlay Id="PlacesOverlay"/>
                <esriUI:GraphicsOverlay Id="RouteOverlay">
                    <esriUI:GraphicsOverlay.Renderer>
                        <esriSymbols:SimpleRenderer>
                            <esriSymbols:SimpleLineSymbol Color="#0079c1" Style="Solid" Width="5"/>
                        </esriSymbols:SimpleRenderer>
                    </esriUI:GraphicsOverlay.Renderer>
                </esriUI:GraphicsOverlay>
            </esri:MapView.GraphicsOverlays>
            <utils:GeoViewExtensions.ViewpointControllerCollection>
                <!--Viewpoint controller for synchronizing MapView's viewpoint with the view-model's AOI-->
                <utils:ViewpointControllerCollection>
                    <utils:ViewpointController Viewpoint="{Binding AreaOfInterest, Mode=TwoWay, Source={StaticResource MapViewModel}}"/>
                    <utils:ViewpointController Viewpoint="{Binding AreaOfInterest, Mode=TwoWay, Source={StaticResource GeocodeViewModel}}"/>
                    <utils:ViewpointController Viewpoint="{Binding AreaOfInterest, Mode=TwoWay, Source={StaticResource RoutingViewModel}}"/>
                </utils:ViewpointControllerCollection>
            </utils:GeoViewExtensions.ViewpointControllerCollection>
            <utils:GeoViewExtensions.HoldingLocationController>
                <utils:HoldingLocationController HoldingLocation="{Binding ReverseGeocodeInputLocation, Mode=TwoWay, Source={StaticResource GeocodeViewModel}}"/>
            </utils:GeoViewExtensions.HoldingLocationController>
        </esri:MapView>

        <!--<controls:ErrorDialog IsVisible="True" Grid.Column="1" Grid.Row="3" HeightRequest="200" WidthRequest="400"/>-->

        <!--Menu Button-->
        <BoxView Grid.Column="0" Grid.Row="0" Color="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="10, 10, 0, 0"/>
        <Image Source="menu.png" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Margin="10, 10, 0, 0">
            <Image.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OpenCloseSettings"/>
            </Image.GestureRecognizers>
        </Image>

        <!-- Search Panel -->
        <BoxView Grid.Column="1" Grid.Row="0" Color="White" HorizontalOptions="FillAndExpand" Margin="0, 10, 10, 0"/>
        <SearchBar Placeholder="Address or Place" Text="{Binding SearchText, Mode=TwoWay}" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                       Grid.Column="1" Grid.Row="0" BindingContext="{StaticResource GeocodeViewModel}" SearchCommand="{Binding SearchCommand}"
                       Focused="SearchBar_Focused" Unfocused="SearchBar_Unfocused" Margin="0,10,10,0"/>
        <ListView x:Name="SearchSuggestionsList" BindingContext="{StaticResource GeocodeViewModel}" ItemsSource="{Binding SuggestionsList}" SelectedItem="{Binding SelectedSearchItem}"
                      HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="1" Grid.Row="1" IsVisible="False" BackgroundColor="Transparent" Margin="0,0,10,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid BackgroundColor="White">
                            <Label Text="{Binding}" FontSize="Medium" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Routing Panel -->
        <StackLayout Orientation="Vertical" IsVisible="{Binding Route, Converter={StaticResource NullToVisibilityConverter}, Source={StaticResource RoutingViewModel}}" 
                     BindingContext="{StaticResource GeocodeViewModel}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="White" Margin="10, 10, 10, 0">
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Image Source="startpin.png" HeightRequest="40" VerticalOptions="Center" HorizontalOptions="Start" Margin="5"/>
                    <Entry x:Name="FromLocationTextBox" Text="{Binding FromSearchText, Mode=TwoWay}" Focused="FromLocationSearchBar_Focused"
                                    Unfocused="FromLocationSearchBar_Unfocused" HorizontalOptions="FillAndExpand"/>
                    <Image Source="close.png" VerticalOptions="Start" HorizontalOptions="End" Margin="5">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ClearRouteCommand, Source={StaticResource RoutingViewModel}}"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Image Source="endpin.png" HeightRequest="40" VerticalOptions="Center" HorizontalOptions="Start" Margin="5"/>
                    <Entry x:Name="ToLocationTextBox" Text="{Binding ToSearchText, Mode=TwoWay}" Focused="ToLocationSearchBar_Focused"
                                        Unfocused="ToLocationSearchBar_Unfocused" HorizontalOptions="FillAndExpand"/>
                    <Image Source="directionmaneuvers.png" VerticalOptions="Start" HorizontalOptions="End" Margin="5" BackgroundColor="#0079c1">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="LoadDirectionsControl"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
            </StackLayout>


            <!-- Suggestions box for From location -->
            <ListView x:Name="FromLocationSuggestionsList" ItemsSource="{Binding SuggestionsList}" SelectedItem="{Binding SelectedFromSuggestion}" 
                       IsVisible="False" BackgroundColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid BackgroundColor="White">
                                <Label Text="{Binding}" FontSize="Medium" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Suggestions box for To location -->
            <ListView x:Name="ToLocationSuggestionsList" ItemsSource="{Binding SuggestionsList}" SelectedItem="{Binding SelectedToSuggestion}" 
                       IsVisible="False" BackgroundColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid BackgroundColor="White">
                                <Label Text="{Binding}" FontSize="Medium" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>


        <!-- Menu Items-->
        <StackLayout x:Name="SettingsPanel" Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="False"
                         BindingContext ="{Binding Source={x:Static viewModels:AuthViewModel.Instance}}" BackgroundColor="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackLayout HorizontalOptions="Start" Grid.Column="0" BackgroundColor="White">
                    <Image x:Name="CloseMenuImage" Source="close.png" VerticalOptions="Start" HorizontalOptions="End">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OpenCloseSettings"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <StackLayout Orientation="Vertical" IsVisible="{Binding AuthenticatedUser, Converter={StaticResource NullToVisibilityConverter}}">
                        <Image Source="{Binding AuthenticatedUser.ThumbnailUri}" HorizontalOptions="Center"/>
                        <Label Text="{Binding AuthenticatedUser.FullName}" HorizontalOptions="Center"/>
                    </StackLayout>

                    <TableView WidthRequest="300" VerticalOptions="Center">
                        <TableRoot>
                            <TableSection Title="Settings">
                                <ImageCell Text="Change Basemap" ImageSource="choosebasemap.png" Tapped="LoadBasemapControl" RelativeLayout.HeightConstraint="60" />
                                <ImageCell Text="Open User Maps" ImageSource="chooseusermap.png" Tapped="LoadUserItems" RelativeLayout.HeightConstraint="60"
                                    IsEnabled="{Binding AuthenticatedUser, Converter={StaticResource NullToVisibilityConverter}}"/>
                                <ImageCell ImageSource="login_logout.png"  Command="{Binding LogInOutCommand}" RelativeLayout.HeightConstraint="60" 
                                    Text ="{Binding AuthenticatedUser, Converter={StaticResource NullToTextConverter}, ConverterParameter=Sign In|Sign Out}"/>
                            </TableSection>
                        </TableRoot>
                    </TableView>
                </StackLayout>
            </Grid>
        </StackLayout>

        <!-- Search Result Banner -->
        <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="FillAndExpand" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10, 0, 10, 10"
                      BindingContext ="{Binding Source={StaticResource GeocodeViewModel}}" IsVisible="{Binding Place, Converter={StaticResource NullToVisibilityConverter}}" BackgroundColor="White">

            <Image x:Name="PinImage" Source="endpin.png" VerticalOptions="Center" HorizontalOptions="Start" Margin="5,5,0,5"/>

            <Label Text="{Binding Place.Label}" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
            <Image x:Name="DirectionsImage" Source="directions.png" VerticalOptions="Center" HorizontalOptions="End" BackgroundColor="#0079c1">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ShowRoutingPanel"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="CloseImage" Source="close.png" VerticalOptions="Center" HorizontalOptions="End">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding CancelLocationSearchCommand}"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>

        <!--Compass Button-->
        <Image x:Name="CompassImage" Source="compass.png" VerticalOptions="End" HorizontalOptions="End" Grid.Row="1" Grid.Column="1" Margin="0,20,20,0"
               BindingContext="{x:Reference MapView}" IsVisible="{Binding MapRotation, Converter={StaticResource NumberToVisibilityConverter}}"
               Rotation="{Binding MapRotation, Converter={StaticResource SubtractFromConverter}}">
            <Image.GestureRecognizers>
                <TapGestureRecognizer
            Tapped="ResetMapRotation"
            NumberOfTapsRequired="1" />
            </Image.GestureRecognizers>
        </Image>

        <!-- GPS Button -->
        <StackLayout Orientation="Vertical"  VerticalOptions="End" HorizontalOptions="End" Grid.Row="3" Grid.Column="1" Margin="0,0,20,100">
            <Image HorizontalOptions="Center"  VerticalOptions="Center" Source="currentlocation.png" BindingContext ="{Binding Source={StaticResource MapViewModel}}" Margin="5,5,5,0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding MoveToCurrentLocationCommand}"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>

        <!-- Activity indicator for long running operations -->
        <StackLayout Opacity="0.5" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" IsVisible="{Binding IsBusy, Source={StaticResource RoutingViewModel}}" BackgroundColor="Gray">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Gray" >
                <Label Text="Requesting Route" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" TextColor="White"/>
                <ActivityIndicator x:Name="AppActivityIndicator" IsRunning="True" Color="White">
                </ActivityIndicator>
            </StackLayout>
        </StackLayout>
        
        <!-- Error message alert for Geocode operations-->
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" BindingContext ="{Binding Source={StaticResource GeocodeViewModel}}"
                     IsVisible="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="White">
                <Label Text="{Binding ErrorMessage}" Margin="10"/>
                <Button Text="OK" Command="{Binding ClearErrorMessageCommand}" Margin="10" HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>

        <!--Error message alert for Map operations-->
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" BindingContext ="{Binding Source={StaticResource MapViewModel}}"
                     IsVisible="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="White">
                <Label Text="{Binding ErrorMessage}" Margin="10"/>
                <Button Text="OK" Command="{Binding ClearErrorMessageCommand}" Margin="10" HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>

        <!--Error message alert for Route operations-->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" BindingContext ="{Binding Source={StaticResource RoutingViewModel}}"
                     IsVisible="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0">
                <Label Text="{Binding ErrorMessage}" Margin="10"/>
            </ScrollView>
            <Button Text="OK" Command="{Binding ClearErrorMessageCommand}" Margin="10" HorizontalOptions="Center" Grid.Row="1"/>
           
        </Grid>

        <!--Error message alert for Auth operations-->
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" BindingContext ="{Binding Source={x:Static viewModels:AuthViewModel.Instance}}"
                     IsVisible="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="White">
                <Label Text="{Binding ErrorMessage}" Margin="10"/>
                <Button Text="OK" Command="{Binding ClearErrorMessageCommand}" Margin="10" HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>

    </Grid>
</ContentPage>